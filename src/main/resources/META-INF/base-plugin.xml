<idea-plugin>
    <extensions defaultExtensionNs="com.jetbrains">
        <gatewayConnectionProvider implementation="com.salesforce.intellij.gateway.connector.PomeriumBasedGatewayConnectionProvider"/>
        <gatewayConnector implementation="com.salesforce.intellij.gateway.connector.GatewayConnectLinkConnector" />
    </extensions>

    <extensions defaultExtensionNs="com.salesforce.gateway">
        <authRedirectResponseHandler implementation="com.salesforce.pomerium.DefaultAuthRedirectResponseHandler" order="last"/>
    </extensions>

    <extensionPoints>
        <extensionPoint qualifiedName="com.salesforce.gateway.authRedirectResponseHandler"
                        interface="com.salesforce.pomerium.AuthenticationRedirectResponseHandler"
                        dynamic="true"/>
    </extensionPoints>
</idea-plugin>